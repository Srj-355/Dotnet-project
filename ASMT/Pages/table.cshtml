@page
@model ASMT.Pages.tableModel
@{
    ViewData["Title"] = "Table";
}
    <div class="table-container">
        <table>
            <caption>Student Information</caption>
            <thead>
                <tr>
                    <th>Full Name</th>
                    <th>Program</th>
                    <th>Mobile/Contact</th>
                    <th>Email</th>
                    <th>+2 College/School Name</th>
                    <th>Address</th>
                    <th>Message</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <!-- Example row of data -->
                <tr>
                    <td>John Doe</td>
                    <td>BCA</td>
                    <td>123-456-7890</td>
                    <td>john.doe@example.com</td>
                    <td>XYZ College</td>
                    <td>123 Main St, Anytown</td>
                    <td>Looking forward to the program!</td>
                    <td class="action-buttons">
                        <button class="edit-button" data-id="1"><i class="fa-solid fa-pen-to-square"></i></button>
                        <button class="delete-button" data-id="1"><i class="fa-solid fa-trash"></i></button>
                    </td>
                </tr>
               
               
            </tbody>
        </table>
    </div>

    
    <div id="editModal" class="modal">
        <div class="modal-content">
            <span class="close">&times;</span>
            <h2>Edit Information</h2>
            <form id="editForm">

                <label for="name">Full Name:</label>
                <input type="text" id="name" name="name"><br><br>

                <label for="program">Program:</label>
                <input type="text" id="program" name="program"><br><br>

                <label for="contact">Mobile/Contact:</label>
                <input type="text" id="contact" name="contact"><br><br>

                <label for="email">Email:</label>
                <input type="email" id="email" name="email"><br><br>

                <label for="college">+2 College/School Name:</label>
                <input type="text" id="college" name="college"><br><br>

                <label for="address">Address:</label>
                <input type="text" id="address" name="address"><br><br>

                <label for="message">Message:</label>
                <textarea id="message" name="message"></textarea><br><br>

                <button type="submit">Save Changes</button>
            </form>
        </div>
    </div>

    
    <div id="deleteConfirmation" class="confirmation-dialog">
        <div class="confirmation-content">
            <span class="close">&times;</span>
            <p>Are you sure you want to delete this item? This action cannot be undone.</p>
            <button id="confirmDelete">Delete</button>
            <button id="cancelDelete">Cancel</button>
        </div>
    </div>

